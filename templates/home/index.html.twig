{% block body %}



<main>
     <div class="hero">
  <img src="{{ asset('images/hero.png') }}" alt="hero" height="500px" width="100%">
  <div class="hero-text">
    <h1>Bienvenue chez Graphitcom</h1>
    <p>Création de sites web & formations</p>
  </div>
</div>

    <section class="siteWeb container">
        <div class="box-siteWeb">
