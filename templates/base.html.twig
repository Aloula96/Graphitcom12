{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Latest Blog Posts</h1>

    {% if posts is empty %}
        <div class="alert alert-info">
            No posts found.
        </div>
    {% else %}
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.summary|length > 150 ? post.summary|slice(0, 150) ~ '...' : post.summary }}</p>
                            <a href="{{ path('post_show', { id: post.id }) }}" class="btn btn-primary">Read more</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
